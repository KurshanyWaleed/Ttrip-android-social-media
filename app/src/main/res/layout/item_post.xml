<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="277dp"
    android:orientation="vertical"
    android:background="@drawable/item_backgroun">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">
       <com.blogspot.atifsoftwares.circularimageview.CircularImageView
           android:layout_width="50dp"
           android:layout_height="match_parent"
           android:src="@drawable/userdefault"
           app:c_border_color="@color/yellow">

       </com.blogspot.atifsoftwares.circularimageview.CircularImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:paddingEnd="5dp"
            android:text="Name of User is here"
            android:id="@+id/userNamePItem"
            ></TextView>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="invisible"
        android:background="@color/black"
        android:id="@+id/imagePostItem"
        ></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post text"
        android:textSize="15dp"
        android:padding="5dp"
        android:id="@+id/description_item"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="LIKE"
            android:background="@null"
            android:id="@+id/likeBtnItem"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="COMMENT"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:id="@+id/commentBtnitem"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginRight="8dp"
            android:text="SHARE"
            android:id="@+id/shareBtnitem"

            />

    </LinearLayout>
</LinearLayout>
</LinearLayout>